<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property dbms="mysql" name="db.type" value="mysql"/>

    <changeSet id="2023.02_001" context="initial_2023_02" author="vilda" dbms="mysql">
        <preConditions onFail="MARK_RAN"><tableExists tableName="mancala_game"/></preConditions>
        <dropTable cascadeConstraints="true" tableName="mancala_game"/>
    </changeSet>

    <changeSet id="2023.02_002" context="initial_2023_02" author="vilda" dbms="mysql">
        <comment>Create table mancala_game</comment>
        <createTable tableName="mancala_game">
            <column name="id" type="${varcharDataType}(36)" remarks="ID of the self-approval policy">
                <constraints nullable="false" />
            </column>

            <column name="pit_indx" type="tinyint"
                    remarks="ID of the target combination of account groups plus payee groups for user">
                <constraints nullable="false" />
            </column>

            <column name="stones_count" type="tinyint"
                    remarks="ID of the target combination of account groups plus payee groups for user">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2023.02_003" context="initial_2023_02" author="vilda" >
        <tagDatabase tag="2023.02"/>
    </changeSet>

</databaseChangeLog>